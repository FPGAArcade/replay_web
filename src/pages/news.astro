---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
//console.log(posts);
---

<Layout title="News">
  <main>
    <p>plain news listing...</p>
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={`/news/${post.slug}`}>{post.data.title}</a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
