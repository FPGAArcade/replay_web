---
import Layout from "@layouts/Layout.astro";

const posts = await Astro.glob("./news/*.md");
---

<Layout title="News">
  <main>
    <p>List of recent news posts here..</p>
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
