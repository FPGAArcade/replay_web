---
import Layout from "@layouts/Layout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main>
    <div class="sidebar">
      <slot name="sidebar" />
    </div>

    <section class="content">
      <slot />
    </section>
  </main>
</Layout>

<style>
  main {
    display: grid;

    grid-template-areas:
      "sidebar"
      "content";

    justify-items: start;
    gap: 1rem;
  }

  @media (min-width: 767px) {
    main {
      grid-template-areas: "content sidebar";
      justify-items: center;
    }
  }

  .sidebar {
    grid-area: sidebar;
  }

  .content {
    grid-area: content;
  }
</style>
